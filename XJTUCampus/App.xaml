<Application
    x:Class="XJTUCampus.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:XJTUCampus"
    RequestedTheme="Dark">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary Source="Theme/LightThemeDictionary.xaml" x:Key="Light"/>
                <ResourceDictionary Source="Theme/DarkThemeDictionary.xaml" x:Key="Dark"/>
            </ResourceDictionary.ThemeDictionaries>
            <SolidColorBrush x:Key="MainColor" Color="#5db754"/>
            <SolidColorBrush x:Key="DarkColor" Color="#519d49"/>
            <SolidColorBrush x:Key="LightColor" Color="#a4e39e"/>
        </ResourceDictionary>
    </Application.Resources>

</Application>
